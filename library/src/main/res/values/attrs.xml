<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name = "min" format = "integer"/>
    <attr name = "max" format = "integer"/>
    <attr name="textColor" format="color" />
    <attr name = "textSize" format = "dimension" />

	<attr name="textStyle">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
        <flag name="black" value="8" />
        <flag name="condensed" value="16" />
        <flag name="light" value="32" />
        <flag name="medium" value="64" />
        <flag name="thin" value="128" />
    </attr>
    <attr name="progressStyle">
        <flag name="percent" value="0" />
        <flag name="value" value="1" />
    </attr>
    <declare-styleable name="SlideNumberPicker">
        <attr name = "min" />
        <attr name = "max" />
        <attr name = "frameColor" format = "color" />
        <attr name = "textColor" />
        <attr name = "textSize" />
        <attr name="textStyle" />
    </declare-styleable>
	<declare-styleable name = "ProgressCircle">
	    <attr name = "min" />
	    <attr name = "max" />
	    <attr name = "progress" format = "integer" />
	    <attr name = "autoHide" format = "boolean" />
        <attr name="textColor"  />
        <attr name="textSize" />
        <attr name="textStyle" />
        <attr name="progressColor" format="color" />	    	    
        <attr name="progressRestColor" format="color" />
        <attr name="arcMargin" format="dimension" />
        <attr name="arcThickness" format="dimension" />
        <attr name="progressStyle" />
	</declare-styleable>
    <declare-styleable name="BarChart">
        <attr name = "axisColor" format = "color" />
        <attr name = "axisWidth" format = "dimension" />
        <attr name = "xGridVisible" format="boolean" />
        <attr name = "xGridColor" format = "color" />
        <attr name = "xGridWidth" format = "dimension" />
        <attr name = "yGridVisible" format="boolean" />
        <attr name = "yGridColor" format = "color" />
        <attr name = "yGridWidth" format = "dimension" />
        <attr name = "textSize" />
        <attr name = "textColor" />
        <attr name = "textStyle" />
        <attr name = "barColor" format = "color" />
        <attr name = "defaultGradientColor0" format = "color" />
        <attr name = "defaultGradientColor" format = "color" />
    </declare-styleable>
</resources>

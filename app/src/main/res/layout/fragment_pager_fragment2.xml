<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.romanpulov.libraryandroidtest.PagerFragment2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment_2"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/generateFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate"
            />
        <Button
            android:id="@+id/generate2FragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate 2"
            />
        <Button
            android:id="@+id/generate3FragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate 3"
            />
        <Button
            android:id="@+id/increaseWidthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            />
        <Button
            android:id="@+id/decreaseWidthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.romanpulov.library.view.BarChart
                android:id="@+id/barFragmentChart2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:yGridVisible="true"
                app:axisColor="#FFAAAAAA"
                app:showLabelOnClick="true"
                />
        </LinearLayout>
    </HorizontalScrollView >


</LinearLayout>

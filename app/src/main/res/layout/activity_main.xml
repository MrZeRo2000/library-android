<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FF444444"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        />

    <Button
        android:id="@+id/getValueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:text="getValue"
        />
    <Button
        android:id="@+id/setValueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setValue"
        android:layout_below="@id/textview1"
        android:layout_toRightOf="@id/getValueButton"
        />

    <Button
        android:id="@+id/startPagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pager"
        android:layout_below="@id/textview1"
        android:layout_toRightOf="@id/setValueButton"
        />

    <com.romanpulov.library.view.SlideNumberPicker
        android:id="@+id/slideNumberPicker1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/getValueButton"
        />
    <com.romanpulov.library.view.SlideNumberPicker
        android:id="@+id/slideNumberPicker2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/slideNumberPicker1"
        app:min="10"
        app:max="50"
        app:textColor="#FF00AA66"
        app:frameColor="#FF00FF00"
        app:textSize="16sp"
        app:textStyle="bold"
        />
    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@+id/slideNumberPicker2"           
    />    
    <com.romanpulov.library.view.ProgressCircle
        android:id="@+id/progressCircle1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/timePicker1"
        app:autoHide="true"
        app:textColor="#FFFFFF00"
        app:textSize="5pt"
        app:textStyle="bold|italic"
        app:progressColor="#FF00FF00"
        app:progressRestColor="#FF6677AA"
        app:arcMargin="7dp"
        app:arcThickness="3dp"
        app:progressStyle="percent"
        app:min="0"
        app:max="140"
        />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressCircle1"
        android:max="140"
        />
    <Button
        android:id="@+id/alwaysVisibleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/seekBar1"
        android:layout_toRightOf="@id/seekBar1"
        android:text="Always Visible"
        />
    <Button
        android:id="@+id/setChartValuesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar1"
        android:text="Set"
        />
    <Button
        android:id="@+id/resetChartValuesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/setChartValuesButton"
        android:layout_alignTop="@id/setChartValuesButton"
        android:text="Reset"
        />
    <TextView
        android:id="@+id/maxValueCaption"
        android:layout_toRightOf="@id/resetChartValuesButton"
        android:layout_alignTop="@id/resetChartValuesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Value / Max Count"
        />
    <EditText
        android:id="@+id/maxValue"
        android:inputType="numberDecimal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/maxValueCaption"
        android:layout_below="@id/maxValueCaption"
        android:text="5"
        />
    <EditText
        android:id="@+id/maxCount"
        android:inputType="numberDecimal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/maxValue"
        android:layout_below="@id/maxValueCaption"
        android:text="3"
        />
    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxValueCaption"
        android:layout_toRightOf="@id/maxCount"
        android:text="Generate"
        />
    <com.romanpulov.library.view.BarChart
        android:id="@+id/barChart1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/generateButton"
        />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barChart1"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.romanpulov.library.view.BarChart
                android:id="@+id/barChart2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:axisColor="#FFAAAAAA"
                app:xGridVisible="true"
                app:yGridVisible="true"
                />
        </LinearLayout>
    </HorizontalScrollView >

</RelativeLayout>

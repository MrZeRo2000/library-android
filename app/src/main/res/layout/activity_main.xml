<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF444444"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    <Button
		android:id="@+id/button1"
		android:layout_width="100dp"        
		android:layout_height="50dp"
		android:text="Get value"
		android:layout_below="@+id/textView"
        android:clickable="true"                
        />    
    <com.romanpulov.library.view.SlideNumberPicker
        android:id="@+id/slideNumberPicker1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button1"
        />
    <com.romanpulov.library.view.SlideNumberPicker
        android:id="@+id/slideNumberPicker2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/slideNumberPicker1"
        app:min="10"
        app:max="50"
        app:textColor="#FF00AA66"
        app:frameColor="#FF00FF00"
        app:textSize="16sp"
        app:textStyle="bold"
        />
    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_below="@+id/slideNumberPicker2"           
    />    
    <com.romanpulov.library.view.ProgressCircle
        android:id="@+id/progressCircle1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/timePicker1"
        app:textColor="#FFFFFF00"
        app:textSize="5pt"
        app:textStyle="bold|italic"
        app:progressColor="#FF00FF00"
        app:progressRestColor="#FF6677AA"
        app:arcMargin="7dp"
        app:arcThickness="3dp"
        app:progressStyle="percent"
        app:min="10"
        app:max="85"
        />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressCircle1"
        android:max="100"
        />


</RelativeLayout>
